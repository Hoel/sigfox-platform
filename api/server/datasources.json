{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "mongodb": {
    "name": "mongodb",
    "connector": "mongodb"
  },
  "freeMobile": {
    "name": "freeMobile",
    "connector": "rest",
    "debug": "false",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://smsapi.free-mobile.fr/sendmsg",
          "query": {
            "user": "{!user:string}",
            "pass": "{!pass:string}",
            "msg": "{!msg:string}"
          }
        },
        "functions": {
          "sendSMS": [
            "user",
            "pass",
            "msg"
          ]
        }
      }
    ]
  },
  "sigfox": {
    "name": "sigfox",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://backend.sigfox.com/api/devices/{deviceId:string}/messages",
          "headers": {
            "Authorization": "Basic {credentials:string}"
          },
          "query": {
            "limit": "{!limit=1:number}",
            "before": "{!before:number}"
          }
        },
        "functions": {
          "getBaseStations": [
            "credentials",
            "deviceId",
            "limit",
            "before"
          ],
          "getMessages": [
            "credentials",
            "deviceId",
            "limit",
            "before"
          ]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "https://backend.sigfox.com/api/devicetypes",
          "headers": {
            "Authorization": "Basic {credentials:string}"
          }
        },
        "functions": {
          "testConnection": [
            "credentials"
          ]
        }
      }
    ]
  },
  "emailOutlook": {
    "name": "emailOutlook",
    "connector": "mail",
    "transports": [
      {
        "type": "SMTP",
        "host": "smtp.office365.com",
        "secure": false,
        "port": 587,
        "auth": {
          "user": "",
          "pass": ""
        }
      }
    ]
  },
  "webhook": {
    "name": "webhook",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "{!method:string}",
          "url": "{!url:string}",
          "headers": {
            "Authorization": "Basic {credentials:string}"
          },
          "body": "{json:string}"
        },
        "functions": {
          "send": [
            "url",
            "method",
            "credentials",
            "json"
          ]
        }
      }
    ]
  }
}
