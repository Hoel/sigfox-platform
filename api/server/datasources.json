{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "mongodb": {
    "name": "mongodb",
    "connector": "mongodb"
  },
  "freeMobile": {
    "name": "freeMobile",
    "connector": "rest",
    "debug": "false",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://smsapi.free-mobile.fr/sendmsg",
          "query": {
            "user": "{!user:string}",
            "pass": "{!pass:string}",
            "msg": "{!msg:string}"
          }
        },
        "functions": {
          "sendSMS": [
            "user",
            "pass",
            "msg"
          ]
        }
      }
    ]
  },
  "sigfox": {
    "name": "sigfox",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://backend.sigfox.com/api/devices/{deviceId:string}/messages",
          "headers": {
            "Authorization": "Basic {credentials:string}"
          },
          "query": {
            "limit": "{!limit=1:number}",
            "before": "{!before:number}"
          }
        },
        "functions": {
          "getBaseStations": [
            "credentials",
            "deviceId",
            "limit",
            "before"
          ],
          "getMessages": [
            "credentials",
            "deviceId",
            "limit",
            "before"
          ]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "https://backend.sigfox.com/api/devicetypes",
          "headers": {
            "Authorization": "Basic {credentials:string}"
          }
        },
        "functions": {
          "testConnection": [
            "credentials"
          ]
        }
      }
    ]
  },
  "webhook": {
    "name": "webhook",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "{!method:string}",
          "url": "{!url:string}",
          "headers": {
            "Authorization": "Basic {credentials:string}"
          },
          "body": "{json:string}"
        },
        "functions": {
          "send": [
            "url",
            "method",
            "credentials",
            "json"
          ]
        }
      }
    ]
  },
  "hereGeoloc": {
    "name": "hereGeoloc",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "POST",
          "url": "https://pos.cit.api.here.com/positioning/v1/locate?app_id={app_id:string}&app_code={app_code:string}",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": "{json:string}"
        },
        "functions": {
          "locate": [
            "app_id",
            "app_code",
            "json"
          ]
        }
      }
    ]
  },
  "googleGeoloc": {
    "name": "googleGeoloc",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "POST",
          "url": "https://www.googleapis.com/geolocation/v1/geolocate?key={key:string}",
          "headers": {
            "Content-Type": "application/json"
          },
          "body": "{json:string}"
        },
        "functions": {
          "locate": [
            "key",
            "json"
          ]
        }
      }
    ]
  },
  "googlePlace": {
    "name": "googlePlace",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://maps.googleapis.com/maps/api/place/nearbysearch/json?location={latitude:number},{longitude:number}&radius={accuracy:number}&key={key:string}"
        },
        "functions": {
          "locate": [
            "key",
            "latitude",
            "longitude",
            "accuracy"
          ]
        }
      }
    ]
  }
}
